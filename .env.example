# Server port
PORT= 8080

# Azure AI Content Safety credentials
CONTENT_SAFETY_KEY = your_azure_api_key
CONTENT_SAFETY_ENDPOINT = https://your-resource-name.cognitiveservices.azure.com

# Moderation severity threshold (0 = none, 7 = highest)
# Messages with harm scores greater or equal to this level will be blocked
MIN_HARMFUL_SEVERITY_LEVEL = 2

# Text message length limits
TEXT_MIN_LENGTH = 1
TEXT_MAX_LENGTH = 2000

# Message author settings
USER_DEFAULT_NAME = anonymous
USER_MIN_LENGTH = 1
USER_MAX_LENGTH = 20
USER_ALLOWED_CHARS = ^[_A-Za-z0-9][_A-Za-z0-9\-.\s]*$

# PostgreSQL connection string
DB_CONNECTION_STRING = postgresql://your_user:your_password@host:port/your_db