<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Message Board</title>
    <link rel="stylesheet" href="/styles/index.css" />
    <%- include("partials/dateScript") _%>
  </head>
  <body>
    <%- include("partials/header",{includeLastUpdated: true}) _%>
    <main>
      <a class="button new-message" href="/new">Post a new message</a>
      <% if ( messages.length >0){ %>
      <ul class="message-list">
        <% for (let idx= messages.length -1; idx>=0; idx--){ const message =
        messages[idx]; %>
        <li>
          <a href="/message/<%=message.id%>">
            <%- include("partials/message", {message, dateToStr}) _%>
          </a>
        </li>
        <%}%>
      </ul>
      <% } else { %>
      <p class="centered-text">No message yet!</p>
      <% } %>
    </main>
    <%- include("partials/creditFooter") _%>
  </body>
</html>
